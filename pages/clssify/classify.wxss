/* pages/clssify/classify.wxss */

.classify {
  padding-top: 1rem;
  display: flex;
  justify-content: space-between;
  height: 100%;
}

.left_banner {
  width: 20%;
  background: #f8f8f8;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  text-align: center;
}

.left_baner_item {
  display: block;
  width: 100%;
  font-size: 0.875rem;
  color: #474245;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 1rem 0;
  border-left: 3px solid transparent;
}

.selected {
  border-left: 3px solid #ff4891;
  background: #fff;
}

.left_baner_item_text {
  display: inline-block;
  padding: 0.25rem 0;
}

.right_detail {
  margin: 1rem 0;
  width: 80%;
  /* background: peachpuff; */
  overflow-y: scroll;
  overflow-x: hidden;
  padding: 0 2%;
}

.right_detail_list {
  display: flex;
  padding: 1rem 0;
  border-top: 0.0625rem solid #f5f5f5;
}

.right_detail_image_container {
  width: 30%;
  background: white;
}

.right_detail_image {
  width: 100%;
}

.right_detail_text_container {
  display: inline-block;
  width: 70%;
}

.right_detail_name, .right_detail_subtitle, .right_detail_price {
  display: block;
  font-size: 0.75rem;
  padding-left: 5%;
  text-align: left;
}

.right_detail_name {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.right_detail_subtitle,.right_detail_noVipPrice {
  color: #969696;
}

.right_detail_vipPrice {
  color: rgb(255, 72, 145);
}
.right_detail_vipPrice.right_detail_noVipPrice{
  margin-top: 1rem;
}
