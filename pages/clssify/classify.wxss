/* pages/clssify/classify.wxss */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.classify {
  padding-top: 1rem;
  display: flex;
  justify-content: space-between;
  height: 100%;
}

.left_banner {
  width: 20%;
  background: #f8f8f8;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  text-align: center;
}

.left_baner_item {
  display: block;
  width: 100%;
  font-size: 0.75rem;
  color: #474245;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 1rem 0;
  border-left: 3px solid transparent;
}

.selected {
  border-left: 3px solid #ff4891;
  background: #fff;
}

.left_baner_item_text {
  display: inline-block;
  padding: 0.25rem 0;
}

.right_detail {
  margin: 0.4rem 0;
  width: 80%;
  /* background: peachpuff; */
  overflow-y: scroll;
  overflow-x: hidden;
  padding: 0 2%;
  position: relative;
}

.right_detail_list {
  display: flex;
  padding: 1rem 0;
  border-top: 0.0625rem solid #f5f5f5;
}

.right_detail_image_container {
  width: 30%;
  background: white;
  position: relative;
}

.tags {
  text-align: center;
  width: 80%;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  color: rgb(255, 255, 255);
  background: linear-gradient(46deg, rgb(250, 4, 51), rgb(250, 82, 30));
  font-size: 0.75rem;
  border-radius: 3px;
}

.right_detail_image {
  width: 100%;
  height: auto;
}

.right_detail_text_container {
  display: inline-block;
  width: 70%;
}

.right_detail_name, .right_detail_subtitle, .right_detail_price {
  display: block;
  font-size: 0.75rem;
  padding-left: 5%;
  text-align: left;
}

.right_detail_name {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.right_detail_subtitle, .right_detail_noVipPrice {
  color: #969696;
}

.right_detail_vipPrice {
  color: rgb(255, 72, 145);
}

.right_detail_vipPrice.right_detail_noVipPrice {
  margin-top: 1rem;
}

/*面板切换 */

.right_detail_scroll {
  width: 100%;
  white-space: nowrap;
  position: fixed;
  background: white;
}

.right_detail_switchBar {
  display: inline-block;
  font-size: 0.75rem;
  color: #474245;
  height: 2.25rem;
  line-height: 2.25rem;
  margin: 0rem 0.3rem;
}

.right_detail_switchBar.lastItem {
  margin-right: 3rem;
}

.titleInfo {
  font-size: 0.85rem;
  margin-top: 2.5rem;
}

/* 下拉菜单的按钮 */

.pull_down {
  text-align: center;
  width: 10%;
  padding-right: 2%;
  height: 2.25rem;
  line-height: 2.25rem;
  position: fixed;
  right: 0;
  /* top:0; */
  background: white;
  z-index: 100;
}

.pull_down_image {
  width: 50%;
  vertical-align: middle;
}
