/* pages/clssify/classify.wxss */

.classify {
  padding-top: 1rem;
  display: flex;
  justify-content: space-between;
  height: 100%;
}

.left_banner {
  width: 20%;
  background: #f8f8f8;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  text-align: center;
}

.left_baner_item {
  display: block;
  width: 100%;
  font-size: 0.875rem;
  color: #474245;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 1rem 0;
   border-left: 3px solid transparent;
}
.selected {
  border-left: 3px solid #ff4891;
  background: #fff;
}
.left_baner_item_text{
  display: inline-block;
  padding: 0.25rem 0;
}
.right_detail {
  width: 80%;
  background: peachpuff;
}
