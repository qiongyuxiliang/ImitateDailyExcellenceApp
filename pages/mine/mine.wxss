.header_container {
  width: 100%;
  height: 6.1875rem;
  background: url(https://static-as.missfresh.cn/frontend/user/static/img/my-bg.95ae718.png) 100%;
  padding-top: 3.9375rem;
  text-align: center;
  /* text-align: center; */
}

.login_btn {
  display: inline-block;
  padding: 2%;
  border: 0.0625rem solid #ff4891;
  color: #ff4891;
  font-size: 0.75rem;
  border-radius: 5px;
}

/* 个人property信息 */

.personal_fund {
  display: flex;
  justify-content: space-around;
  margin: 1rem 3%;
  color: #4d4d4d;
  font-size: 0.75rem;
}

.about_personal_fund {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  white-space: nowrap;
  width: 24%;
}

.about_personal_image {
  display: flex;
  width: 28%;
  justify-content: center;
}

.about_personal_fund1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.personal_fund_image {
  /* display: inline-block */
  width: 25%;
  align-self: center;
}

.content {
  margin: 0 0.5rem;
}

/* 开通会员 */

.vip_rights {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.vip_rights_benefits {
  font-size: 1.25rem;
  color: #474245;
}

.open_vip {
  color: #969696;
  font-size: 0.75rem;
}
.vip_benefits_tips{
    color: #969696;
    font-size: 0.75rem;
    margin: 0.5rem 0 0.5rem 0;
}
.vip_benefits_tips_text{
  color: #ff4891;
}
/* vip特权 */
.vip_privilege{
  display: flex;
  justify-content: space-around;
  font-size: 0.75rem;
  color: #474245;
  line-height: 1.5rem;
  margin-bottom: 2rem;
}
.vip_privilege_image{
  width: 2rem;
}
/* 商品图片链接推荐 */
.recommend_image_link{
  display: flex;
  flex-wrap: wrap;
   flex-direction: row;
   justify-content: space-around
}
.recommend_image_link_image{
  width: 100%;
}
.about_us_item{
  display: flex;
  justify-content: space-between;
  margin-top: 1rem;
  padding-bottom: 1rem;
      border-bottom: 0.0625rem solid #f0f0f0;
    color: #262626;
    font-size: 0.9375rem;
}
.arrow{
   display: block;
    width: 0.5rem;
    height: 0.5rem;
    top: 1.5625rem;
    right: 0;
    border-bottom: 0.0625rem solid #ccc;
    border-right: 0.0625rem solid #ccc;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
}