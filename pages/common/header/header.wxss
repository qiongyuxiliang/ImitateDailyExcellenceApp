/* pages/header/header.wxss */

.container {
  padding: 0;
  margin: 0;
}
.opacityHeight{
  height: 4rem;
}
.topbar {
  display: flex;
  flex-direction: row;
  padding: 0 40rpx;
  /* padding-left: 0.8rem;
  padding-right: 0.4rem; */
  justify-content: space-between;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  z-index: 10000;
  top: 0;
  background: white;
}

.topPic {
  width: 3.5rem;
  vertical-align: text-top;
  line-height: 1rem;
  height: 1rem;
}

.imageContainer {
  width: 100%;
}

.addressContainer {
  display: inline-block;
  position: relative;
  text-align: center;
  white-space: nowrap;
  line-height: 1rem;
}

.text {
  max-width: 4.85rem;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 1rem;
  display: inline-block;
}

.text:after {
  position: absolute;
  content: '';
  display: inline-block;
  width: 1em;
  height: 1em;
  margin-left: -1em;
  background: url(data:image/png;base64,) no-repeat center left;
  background-size: 0.6rem;
  vertical-align: middle;
}

.search {
  display: inline-block;
  min-width: 1.25rem;
  height: 1rem;
  /* border: 1px solid red; */
  border-radius: 4rem;
  font-size: 0.8rem;
  line-height: 1rem;
  background: url(data:image/png;base64,) no-repeat 0.4rem center;
  background-size: 1rem;
  background-color: #f5f5f5;
  padding-left: 1.4rem;
}

.panel {
  position: fixed;
  top: 1.7rem;
  white-space: nowrap;
  text-align: left;
  border-bottom: 1PX solid #e6e6e6;
  overflow: hidden;
  z-index: 1000;
  background: white;
}

/* ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} */

.scroll-view-item_H {
  position: relative;
  display: inline-block;
  margin: 0 0.9375rem;
}

.cont {
  display: inline-block;
  padding-bottom: 10px;
  width: auto;
}

.cont.active {
  border-bottom: 2PX solid #ff4891;
}

/* 下拉按钮 */

.pull_down {
  position: fixed;
  z-index: 10000;
  top: 1.7rem;
  width: 10%;
  right: 0;
  height: 2rem;
  background-color: #fff;
  background: #fff url(data:image/png;base64,) no-repeat center 0.5rem;
  background-size: 0.875rem;
  background-position-y: 45%;
}

/* 下拉菜单选项 */

.pull_down_menu {
  margin: 0;
  position: fixed;
  top: 1.7rem;
  white-space: nowrap;
  text-align: center;
  border-bottom: 1PX solid #e6e6e6;
  overflow: hidden;
  z-index: 10000;
  background: white;
  width: 100%;
  max-height: 73%;
  /* overflow: scroll; */
}

.pull_down_text {
  display: block;
  padding-bottom: 12px;
}

.pull_down_close {
  position: absolute;
  top: 0;
  right: 0;
  width: 2.5rem;
  height: 1.7rem;
  background: url(data:image/png;base64,) no-repeat center center;
  background-size: 1.25rem 1.25rem;
}

/* 下拉菜单项 */

.menu_item_list {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  /* height: 100px; */
  max-height: 100%;
  overflow-y: scroll;
}

.menu_item_detail {
  width: 33%;
  padding-bottom: 8%;
}

.menu_item_image {
  width: 50%;
}

.menu_item_text {
  display: block;
}
