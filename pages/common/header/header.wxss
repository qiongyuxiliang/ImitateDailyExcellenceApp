/* pages/header/header.wxss */
.container {
  padding: 0;
  margin: 0;
}
.topbar {
  display: flex;
  flex-direction: row;
  /* margin: 0 40rpx; */
  padding-left: 0.8rem;
  padding-right: 0.4rem;
  justify-content: space-between;
  box-sizing: border-box;
  /* position: fixed; */
  width: 100%;
}

.topPic {
  width: 3.5rem;
  vertical-align: text-top;
  line-height: 1rem;
  height: 1rem;
}

.imageContainer {
  width: 100%;
}

.addressContainer {
  display: inline-block;
  position: relative;
  text-align: center;
  white-space: nowrap;
  line-height: 1rem;
}

.text {
  max-width: 4.85rem;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 1rem;
  display: inline-block;
}

.text:after {
  position: absolute;
  content: '';
  display: inline-block;
  width: 1em;
  height: 1em;
  margin-left: -1em;
  background: url(data:image/png;base64,) no-repeat center left;
  background-size: 0.6rem;
  vertical-align: middle;
}

.search {
  display: inline-block;
  min-width: 1.25rem;
  height: 1rem;
  /* border: 1px solid red; */
  border-radius: 4rem;
  font-size: 0.8rem;
  line-height: 1rem;
  background: url(data:image/png;base64,) no-repeat 0.4rem center;
  background-size: 1rem;
  background-color: #f5f5f5;
  padding-left: 1.4rem;
}

.panel {
  /* position: fixed; *//* top: 1.7rem; */
  white-space: nowrap;
  text-align: left;
  border-bottom: 1PX solid #e6e6e6;
  overflow: hidden;
  /* z-index: 100; *//* background: white; */
}

/* ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} */

.scroll-view-item_H {
  position: relative;
  display: inline-block;
  margin: 0 0.9375rem;
}

.cont {
  display: inline-block;
  padding-bottom: 10px;
  width: auto;
}

.cont.active {
  border-bottom: 2PX solid #ff4891;
}
